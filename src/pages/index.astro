            list-style: none;
            padding: 0;
            margin: 0;
        }

        li {
            margin-bottom: 10px;
        }

        li::before {
            content: "•";
            color: #555;
            font-size: 10px;
            display: inline-block;
            width: 1em;
            margin-left: -1em;
        }
        /* Style pour la citation avec des accolades */
        .styled-citation {
            position: relative;
            font-size: 3rem;
            line-height: 3rem;
            font-style: italic;
            margin: 1rem auto;
            text-align: center;
            max-width: 10rem;
            color: #D95B43
        }

        .styled-citation::before,
        .styled-citation::after {
            content: '"';
            font-size: 1.5em;
            position: absolute;
        }

        .styled-citation::before {
            top: -1rem;
            left: -1rem;
        }

        .styled-citation::after {
            bottom: -1rem;
            right: -1rem;
        }
</style>
