            color: #C02942;
            margin: 2rem 0;
        }

        p {
            line-height: 1.3rem;
            margin-bottom: 1rem;

        }

        ul {
            margin-bottom: 1rem;
            padding-left: 1rem;
        }

        strong {
            font-weight: 700;
        }
        /* Styles pour les ul et li */
