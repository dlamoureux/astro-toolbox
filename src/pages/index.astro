  }
  /* Réinitialisation du style par défaut */

        /* Remise à zéro des marges et des paddings */
        body,
        h1,
        h2,
        h3,
        h4,
        h5,
        h6,
        p,
        ul,
        ol,
        li,
        dl,
        dd,
        figure,
        figcaption,
        blockquote,
        pre,
        fieldset,
        legend,
        button,
        input,
        textarea,
        select {
            margin: 0;
            padding: 0;
        }

        /* Remise à zéro des styles de liste */
        ul,
        ol {
            list-style: none;
        }

        /* Remise à zéro des styles de lien */
