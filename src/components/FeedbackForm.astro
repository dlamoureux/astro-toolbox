---
import send from '../images/paper-plane-solid.svg';
---

<div class="wannajoin-form">
  <form
    netlify
    netlify-honeypot
    name="wannajoin"
    method="POST"
  >
    <p class="hidden">
      <label>
        Don’t fill this out if you’re human: <input name="bot-field" />
      </label>
    </p>
    <input type="hidden" name="form-name" value="feedback" />
    <label for="name">Nom</label>
    <input id="name" type="text" name="name" required />
    <label for="email">Courriel</label>
    <input id="email" type="email" name="email" required />
    <label for="feedback">Un commentaire pour nous aider ?</label>
    <textarea id="feedback" wrap="soft" name="feedback"></textarea>
    <button type="submit">
      <img
        class="action__buttonImg"
        src={send}
      />
      Envoyer</button>
  </form>
</div>

<style>
  .action__buttonImg {
    height: 32px;
    margin-right: 0.5rem;
  }
  form {
    display: grid;
    gap: 10px;
    max-width: 400px;
    margin: 0 auto;
  }

  label {
    display: block;
    font-weight: bold;
    font-size: 0.75rem;
  }

  input,
  textarea {
    width: calc(100%-2rem);
    padding: 1rem;
    border: 1px solid #0b0a0a;
    border-radius: 4px;
    font-size: 0.875rem;
    font-family: system-ui, sans-serif;
    margin-bottom: 0.5rem;
  }

  button[type='submit'] {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    font-size: 1rem;
    padding: 1rem;
    background-color: #1991cb;
    color: #fff;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s;
    margin-top: 10px;
    font-family: system-ui, sans-serif;
  }

  button[type='submit']:hover {
    background-color: #19cbbf;
  }
  .hidden {
    clip: rect(0 0 0 0);
    clip-path: inset(50%);
    height: 1px;
    overflow: hidden;
    position: absolute;
    white-space: nowrap;
    width: 1px;
  }
</style>
